<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Contact List</h2>
            <a href="/contact/add" class="btn btn-primary mb-2">Add Contact</a>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Number</th>
                    <th scope="col">Name</th>
                    <th scope="col">Number</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (contacts.length === 0) { %>
                    <tr>
                      <td colspan="4">
                        <div class="alert alert-danger fw-bold" role="alert">
                          Data contact still zero
                        </div>
                      </td>
                    </tr>
                  <% } %>

                    <% let num = 1 %>
                    <% contacts.forEach((contact,i) => { i++ %>  
                        <tr>
                          <th scope="row"><%= i++ %></th>
                          <td><%= contact.name %></td>
                          <td><%=contact.number %></td>
                          <td>
                              <a href="/contact/<%= contact.name %>" class="btn btn-info badge rounded-pill p-2"><i class="bi bi-info-circle p-1"></i> Detail</a>
                          </td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
        </div>
    </div>
</div>
